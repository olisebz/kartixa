# ============================================================================
# Kartixa Backend Configuration
# Copy to .env and adjust values
# ============================================================================

# MariaDB Connection
# Use "db" when running via docker compose, "localhost" for local dev
DATABASE_HOST=db
DATABASE_PORT=3306
DATABASE_USER=kartixa
DATABASE_PASSWORD=kartixa_dev
DATABASE_NAME=kartixa

# API Security
# Required for write operations (POST/PUT/DELETE). Leave empty to disable.
API_KEY=

# CORS (comma-separated origins, or * for development)
CORS_ORIGINS=http://localhost:3000

# Environment
NODE_ENV=development

# Rate Limiting (requests per window)
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# Auth Feature Flag
AUTH_ENABLED=false

# JWT Secret (min 32 chars, required when AUTH_ENABLED=true)
# Generate: openssl rand -base64 48
JWT_SECRET=

# Password Pepper (HMAC pre-hash, recommended for production)
# Generate: openssl rand -base64 32
PASSWORD_PEPPER=
